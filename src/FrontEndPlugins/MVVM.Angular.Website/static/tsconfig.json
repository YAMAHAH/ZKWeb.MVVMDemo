{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "@core/*": [
                "src/core/*"
            ],
            "@ui_components/*": [
                "src/ui_components/*"
            ],
            "@business_bases/*": [
                "src/business_bases/*"
            ],
            "@generated_module/*": [
                "src/modules/generated_module/*"
            ],
            "@global_module/*": [
                "src/business_bases/desktop/global_module/*"
            ],
            "@base_module/*": [
                "src/business_bases/desktop/base_module/*"
            ],
            "@auth_module/*": [
                "src/business_bases/desktop/auth_module/*"
            ],
            "@admin_modules/*": [
                "src/modules/admin_modules/*"
            ],
            "@main_module/*": [
                "src/app_module/*"
            ],
            "@business_modules/*": [
                "src/modules/business/*"
            ],
            "@vendor/*": [
                "src/vendor/*"
            ]
        },
        "noEmitHelpers": false
    },
    "include": [
        "./src/**/*.module.ts",
        "./src/*.d.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {
        "genDir": "."
    }
}